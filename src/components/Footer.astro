---
const today = new Date();
const title = "Spotchi";
const email = "quentin@qualiaworks.com"
const github_name = "spotchi"
const description = "Musings in technology, mathematics and philosophy"
---

<footer>
	<div class="footer-container">
		<div class="footer-main">
			<div class="footer-section about-section">
				<div class="section-title">{title}</div>
				<p class="description">{description}</p>
			</div>
			
			<div class="footer-section contact-section">
				<div class="section-title">Contact</div>
				<ul class="contact-list">
					<li>
						<a href={`mailto:${email}`} class="email-link">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="email-icon">
								<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
								<polyline points="22,6 12,13 2,6"></polyline>
							</svg>
							{email}
						</a>
					</li>
					<li>
						<a href={`https://github.com/${github_name}`} target="_blank" class="github-link">
							<span class="sr-only">Go to Astro's GitHub repo</span>
							<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/github" class="github-icon">
								<path
									fill="currentColor"
									d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
								></path>
							</svg>
						</a>
					</li>
				</ul>
			</div>
		</div>
		
		<div class="footer-bottom">
			<div class="copyright">
				&copy; {today.getFullYear()} {title}. All rights reserved.
			</div>
			<div class="powered-by">
				Powered by <a href="https://astro.build" target="_blank">Astro</a>
			</div>
		</div>
	</div>
</footer>

<style>
	footer {
		background: linear-gradient(to bottom, #f8f9fa, #e9ecef);
		color: #495057;
		padding: 3rem 0 1.5rem;
		font-size: 0.95rem;
		border-top: 1px solid #dee2e6;
	}
	
	.footer-container {
		max-width: 1100px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}
	
	.footer-main {
		display: grid;
		grid-template-columns: 1fr;
		gap: 2rem;
		margin-bottom: 2rem;
	}
	
	.section-title {
		font-size: 1.2rem;
		margin-bottom: 1rem;
		color: #212529;
		font-weight: 600;
	}
	
	.description {
		line-height: 1.6;
		color: #6c757d;
	}
	
	.contact-list {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.contact-list li {
		margin-bottom: 0.75rem;
	}
	
	.email-link {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		text-decoration: none;
		color: #333;
		transition: color 0.2s ease;
	}
	
	.email-icon {
		flex-shrink: 0;
	}
	
	.email-link:hover {
		color: #555;
	}
	
	.github-link {
		display: inline-block;
		color: #666;
		transition: color 0.2s ease;
	}
	
	.github-icon {
		color: #666;
	}
	
	.github-link:hover {
		color: #333;
	}
	
	.github-link:hover .github-icon {
		color: #333;
	}
	
	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
	
	.footer-bottom {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 0.5rem;
		padding-top: 1.5rem;
		border-top: 1px solid #dee2e6;
		text-align: center;
		font-size: 0.85rem;
		color: #6c757d;
	}
	
	.powered-by a {
		color: #0d6efd;
		text-decoration: none;
	}
	
	.powered-by a:hover {
		text-decoration: underline;
	}
	
	@media (min-width: 768px) {
		.footer-main {
			grid-template-columns: 2fr 1fr;
		}
		
		.footer-bottom {
			flex-direction: row;
			justify-content: space-between;
			text-align: left;
		}
	}
</style>
